include LICENSE.txt
include README.md

include setupbase.py
include pytest.ini
include .coverage.rc

include tsconfig.json
include package.json
include webpack.config.js
include jupyter_jsmol/labextension/*.tgz

# Documentation
graft docs
exclude docs/\#*
prune docs/build
prune docs/gh-pages
prune docs/dist

# Examples
graft examples

# Tests
graft js/tests
prune js/tests/build

# Javascript files
graft jupyter_jsmol/nbextension
graft js/src
prune js/lib
prune **/node_modules
prune coverage

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .ipynb_checkpoints
